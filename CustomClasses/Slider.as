class Slider extends MovieClip {	var mcPointer:MovieClip;	var mcIndicator:MovieClip;	var runner:Number;	var sliderValue:Number;	var active:Boolean;	[Inspectable(defaultValue=0)]	var min:Number;	[Inspectable(defaultValue=100)]	var max:Number;	[Inspectable(defaultValue=0)]	var startValue:Number;	var range:Number;	//var mcBug:MovieClip;	function Slider() {		this.mcIndicator._xscale = 0;		this.mcPointer.onPress = slide;		this.mcPointer.onRelease = stopSliding;		this.mcPointer.onReleaseOutside = stopSliding;		this.sliderValue = this.startValue;		this.active = false;		//this.min = 100;		//this.max = 200;		this.range = this.max - this.min;		this.mcIndicator._xscale = (this.startValue - this.min)/this.range *100;		this.mcPointer._x = (this.startValue - this.min)/this.range *100;	}	function slide() {		this.startDrag(false, 0, 0, 100, 0);		this._parent.runner = setInterval(this._parent, "checkSetting", 20);		this._parent.active = true;	}	function stopSliding() {		this.stopDrag();		this._parent.active = false;		clearInterval(this._parent.runner);	}	function checkSetting() {		//trace(this.mcPointer._x);		this.sliderValue = this.mcPointer._x *this.range/100 +this.min;		this.mcIndicator._xscale = this.mcPointer._x;		//this._parent.mcBug._xscale = this.mcPointer._x+100;		//this._parent.mcBug._yscale = this.mcPointer._x+100;	}}